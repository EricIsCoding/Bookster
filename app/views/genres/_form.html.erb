<%= form_with model: genre, local: true do |gf|%>
    <%= render "devise/shared/error_messages", resource: genre %>

    <%= gf.label :name %>
    <%= gf.text_field :name %>
    <br />

    <%= gf.label :description %>
    <%= gf.text_field :description %>
    <br />

    <%= gf.hidden_field :book_ids, value: [ params[:book_id] ] unless !params[:book_id] %>

    <%= gf.submit %>
<% end %>