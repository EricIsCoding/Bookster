<%= form_with model: review, local: true do |rf| %>
    <%= render "devise/shared/error_messages", resource: review %>

    <%= rf.label "Score (between 1 and 10):" %>
    <%= rf.number_field :score %>
    <br />

    <%= rf.label "Review (between 20 and 200 characters):" %>
    <%= rf.text_area :content %>
    <br />
    
    <%= rf.hidden_field :book_id, value: params[:id] || params[:review][:book_id]%>
    <%= rf.hidden_field :user_id, value: current_user.id %>

    <%= rf.submit %>
<% end %>
<br />
